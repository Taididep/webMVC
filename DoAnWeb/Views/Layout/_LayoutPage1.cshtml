<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Styles/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="~/Styles/style.js"></script>
</head>
<body>

    <!--Header-->
    <header class="bg-success mb-5 col-lg-8 col-12 position-relative start-50 translate-middle-x" id="header">
        <nav class="navbar bg-light">
            <div class="container-fluid">
                <a class="navbar-brand fs-3" href="#"><strong>LTGFasion</strong></a>

                <!--Đăng nhập-->
                @{
                    var Name = Session["name"];
                    if (Name != null)
                    {
                        <div class="d-flex">
                            <button type="button" class="btn btn-light">Xin chào @Name</button>
                            <button type="button" class="btn btn-light" onclick="location.href = '@Url.Action("DangXuat", "DangNhap")'">Đăng Xuất</button>
                        </div>
                    }
                    else
                    {
                        <div class="d-flex">
                            <button type="button" class="btn btn-light" onclick="location.href = '@Url.Action("DangNhap", "Home")'">Đăng Nhập</button>
                            <button type="button" class="btn btn-light" onclick="location.href = '@Url.Action("DangKy", "Home")'">Đăng Ký</button>

                        </div>
                    }
                }

            </div>
        </nav>

        <nav class="navbar navbar-expand-lg bg-dark border-bottom" data-bs-theme="dark">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll" aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarScroll">
                    <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
                        <li class="nav-item ">
                            <a class="nav-link" aria-current="page" href="@Url.Action("Index", "Home")">Trang Chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("ShowTatCaSanPham", "SanPham")">Sản Phẩm</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="@Url.Action("TinTuc", "Home")">Tin Tức</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("GioiThieu", "Home")">Giới Thiệu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("LienHe", "Home")">Liên Hệ</a>
                        </li>
                    </ul>



                    <form action="@Url.Action("Search", "SanPham")" class="d-flex" role="search" method="get">
                        <input class="form-control me-2" type="search" name="keyword" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-light" type="submit">Search</button>
                    </form>

                </div>
            </div>
        </nav>
    </header>


    <div>
        @RenderBody()
    </div>

    <!--Footer-->
    @RenderPage("~/Views/Shared/Footer.cshtml")

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="~/Styles/style.js"></script>
</body>
</html>
