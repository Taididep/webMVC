<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Styles/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</head>
<body>

    <!--Header-->
    <header class="bg-success mb-5 col-lg-8 col-12 position-relative start-50 translate-middle-x" id="header">
        <nav class="navbar bg-light">
            <div class="container-fluid">
                <a class="navbar-brand fs-3" href="#"><strong>LTGFasion</strong></a>

                <!--Đăng nhập-->
                <div class="d-flex">
                    <button type="button" class="btn btn-light">Xin chào Admin</button>
                    <button type="button" class="btn btn-light" onclick="location.href = '@Url.Action("DangXuat", "DangNhap")'">Đăng Xuất</button>
                </div>

            </div>
        </nav>

        <nav class="navbar navbar-expand-lg bg-dark border-bottom" data-bs-theme="dark">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll" aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarScroll">
                    <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
                        <li class="nav-item ">
                            <a class="nav-link" aria-current="page" href="@Url.Action("QL_Kho", "Admin")">Kho Sản Phẩm</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="@Url.Action("QL_TK", "Admin")">Tài Khoản Khách Hàng</a>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </header>


    <div>
        @RenderBody()
    </div>

    <!--Footer-->
    <footer class="mt-5 col-lg-8 col-12 position-relative start-50 translate-middle-x">
        <div class="top-footer bg-dark">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="newsletter">
                            <h3>ĐĂNG KÝ NGAY ĐỂ NHẬN BẢN TIN</h3>
                            <p>Nhận mã giảm giá 15% khi đăng ký</p>
                            <form>
                                <input type="email" placeholder="Email của bạn" required>
                                <button type="submit">Theo dõi</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-3 col-footer">
                    <div class="footer-section">
                        <h2>Về chúng tôi</h2>
                        <ul>
                            <li>Địa chỉ: 123 Đường ABC, Thành phố XYZ</li>
                            <li>Hotline: 0123456789</li>
                            <li>Email: info@example.com</li>
                            <li>
                                <a href="https://twitter.com/example">Twitter</a>
                                <a href="https://instagram.com/example">Instagram</a>
                                <a href="https://facebook.com/example">Facebook</a>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-3 col-footer">
                    <div class="footer-section">
                        <h2>Xu hướng</h2>
                        <ul>
                            <li><a href="#">Sản phẩm khuyến mãi</a></li>
                            <li><a href="#">Sản phẩm nổi bật</a></li>
                            <li><a href="#">Tất cả sản phẩm</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-3 col-footer">
                    <div class="footer-section">
                        <h2 class="small-text">Mở cửa</h2>
                        <p class="small-text">Thứ 2 - 7, sáng 10:00 - chiều 5:00</p>
                    </div>
                </div>

                <div class="col-md-3 col-footer">
                    <div class="footer-section">
                        <h2>Album ảnh</h2>
                        <!-- Đặt 8 hình ảnh bất kỳ ở đây -->
                    </div>
                </div>
            </div>
        </div>
    </footer>





    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.0.7/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/Styles/style.js"></script>

</body>
</html>
