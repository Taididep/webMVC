@model IEnumerable<DoAnWeb.Models.SANPHAM>

@{
    ViewBag.Title = "QL_Kho";
    Layout = "~/Views/Layout/Layout_Admin.cshtml";
}
    <!-- Tab content -->
<div class="mb-5 col-lg-8 col-12 position-relative start-50 translate-middle-x">
    <div style="text-align:center">
        <h2>KHO HÀNG</h2>
    </div>
    <p>
        @Html.ActionLink("Thêm sản phẩm", "ThemSP")
    </p>
    <div class="tab-content mt-3">

        <div class="tab-pane fade show active" id="TatCa">
            <table class="table table-bordered" style="text-align:center">
                <thead>
                    <tr>
                        <th scope="col">Mã sản phẩm</th>
                        <th scope="col">Hình</th>
                        <th scope="col">Tên sản phẩm</th>
                        <th scope="col">Giá</th>
                        <th scope="col">Số lượng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td width="100px">@Html.DisplayFor(modelItem => item.MASP)</td>
                            <td><img src="~/Imgs/@item.DUONGDAN"/ height="100px" width="100px"></td>
                            <td>@Html.DisplayFor(modelItem => item.TENSP)</td>
                            <td>@Html.DisplayFor(modelItem => item.GIA)</td>
                            <td>@Html.DisplayFor(modelItem => item.SOLUONG)</td>
                            <td>
                                @Html.ActionLink("Chỉnh sửa", "SuaSP", new { id = item.MASP }) |
                                @Html.ActionLink("Xoá", "XoaSP", new { id = item.MASP })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
    