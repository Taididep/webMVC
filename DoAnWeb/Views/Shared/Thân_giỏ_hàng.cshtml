@model List<DoAnWeb.Models.GIOHANG>

<!--Thân-->
<content class="bg-primary-subtle" id="cartBody">
    <div class="container-fluid bg-dark col-lg-8 col-12" style="height: 50px;">
        <div class="d-flex align-items-center h-100">
        </div>
    </div>


    <div class="container-fluid bg-light col-lg-8 col-12" style=" padding: 50px 100px;">
        <table class="table">
            <thead>
                <tr>
                    <th>Chọn</th>
                    <th>Hình Ảnh</th>
                    <th>Tên Sản Phẩm</th>
                    <th>Giá</th>
                    <th>Số Lượng</th>
                    <th>Tổng Tiền</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <input type="checkbox" name="selectedItems" value="@item.MASP" />
                        </td>
                        <td><img src="~/Imgs/@item.SANPHAM.DUONGDAN" width="50" height="50" alt="@item.MASP"></td>
                        <td>@item.SANPHAM.TENSP</td>
                        <td>@item.SANPHAM.GIA</td>
                        <td>
                            <button class="btn btn-sm btn-success" onclick="updateQuantity('@item.MASP', 1)">+</button>
                            <span id="quantity_@item.MASP">@item.SOLUONG</span>
                            <button class="btn btn-sm btn-warning" onclick="updateQuantity('@item.MASP', -1)">-</button>
                        </td>
                        <td>@(item.SANPHAM.GIA * item.SOLUONG)</td>
                        <td>
                            <button class="btn btn-sm btn-danger" onclick="deleteItem('@item.MASP')">Xóa</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="d-flex justify-content-between">
            <p>Tổng tiền: @Model.Sum(item => item.SANPHAM.GIA * item.SOLUONG)</p>
            <button class="btn btn-primary" onclick="processPayment()">Thanh Toán</button>
        </div>

    </div>
</content>
