<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body d-flex flex-column align-items-center">
                    <img src="https://placehold.it/150x150" alt="Profile Picture" class="img-fluid rounded-circle mb-3">
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <ul class="nav nav-tabs" id="myTabs">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#general">General</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#security">Security</a>
                        </li>
                    </ul>

                    <!-- Tab content -->
                    <div class="tab-content mt-3">
                        <div class="tab-pane fade show active" id="general">
                            <!-- General information content -->
                            <h5>General Information</h5>
                            <form>
                                <div class="form-group pb-2">
                                    <label for="fullName">Họ tên:</label>
                                    <input type="text" class="form-control" id="fullName" value="Đinh Văn Tài">
                                </div>
                                <div class="form-group pb-2">
                                    <label>Giới tính:</label>
                                    <div class="justify-content-evenly d-flex">
                                        <div class="form-check mx-2">
                                            <input class="form-check-input" type="radio" name="gender" id="male" checked>
                                            <label class="form-check-label" for="male">Nam</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="gender" id="female">
                                            <label class="form-check-label" for="female">Nữ</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group pb-2">
                                    <label for="birthday">Ngày sinh:</label>
                                    <input type="date" class="form-control" id="birthday" value="2003-03-30">
                                </div>
                                <div class="form-group pb-2">
                                    <label for="address">Địa chỉ:</label>
                                    <input type="text" class="form-control" id="address" value="37/8/9">
                                </div>
                                <div class="form-group pb-2">
                                    <label for="city">Tỉnh/Thành phố:</label>
                                    <input type="text" class="form-control" id="city" value="Hồ Chí Minh">
                                </div>
                                <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                            </form>
                        </div>
                        <div class="tab-pane fade" id="security">
                            <!-- Security information content -->
                            <h5>Security Information</h5>
                            <form>
                                <div class="form-group pb-2">
                                    <label for="username">Tên đăng nhập:</label>
                                    <input type="text" class="form-control" id="username" value="lmht016847" readonly>
                                </div>
                                <div class="form-group pb-2">
                                    <label for="email">Email đăng nhập:</label>
                                    <input type="email" class="form-control" id="email" value="l*********gmail.com">
                                </div>
                                <div class="form-group pb-2">
                                    <label for="phoneNumber">SĐT đăng nhập:</label>
                                    <input type="tel" class="form-control" id="phoneNumber" value="094****609">
                                </div>
                                <div class="form-group pb-2">
                                    <label for="password">Mật khẩu:</label>
                                    <input type="password" class="form-control" id="password" value="********">
                                </div>
                                <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

